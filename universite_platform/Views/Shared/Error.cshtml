@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="glass-card text-center p-5">
        <h1 class="display-1 text-danger fw-bold"><i class="bi bi-exclamation-triangle-fill"></i></h1>
        <h2 class="text-danger mb-4">Bir Hata Oluştu!</h2>
        <p class="lead text-muted mb-4">İşleminiz sırasında beklenmedik bir hata meydana geldi.</p>
        
        @if (Model.ShowRequestId)
        {
            <p class="text-muted small">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }
        
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg mt-3">Ana Sayfaya Dön</a>
    </div>
</div>
