<!DOCTYPE html>
@using Microsoft.AspNetCore.Identity
@using universite_platform.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> Localizer
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kampüs Platformu</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script>
        // Prevent Flash of Incorrect Theme
        const theme = localStorage.getItem('theme');
        if (theme === 'dark') {
            document.documentElement.setAttribute('data-theme', 'dark');
        }
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top">
            <div class="container">
                <a class="navbar-brand fs-4" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard-fill"></i> Kampüs<span style="color: var(--secondary-color);">Platform</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Notes" asp-action="Index">@Localizer["LectureNotes"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Market" asp-action="Index">@Localizer["Market"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Housing" asp-action="Index">@Localizer["Housing"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Forum" asp-action="Index">@Localizer["Forum"]</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle fw-bold text-primary" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                                    @{
                                        var user = await UserManager.GetUserAsync(User);
                                        var greetingName = user?.FullName ?? User.Identity.Name;
                                    }
                                    @Localizer["Hello"], @greetingName
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg animate-slide-in">
                                    <li>
                                        <div class="px-3 py-2">
                                            <small class="text-muted d-block">@Localizer["Account"]</small>
                                            <span class="fw-bold text-dark">@greetingName</span>
                                        </div>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" asp-controller="Profile" asp-action="Index">
                                            <i class="bi bi-person me-2 text-primary"></i> @Localizer["Profile"]
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="/Profile?tab=notifications">
                                            <i class="bi bi-bell me-2 text-warning"></i> @Localizer["Notifications"]
                                        </a>
                                    </li>
                                     <li>
                                        <a class="dropdown-item d-flex align-items-center" href="/Profile?tab=purchased">
                                            <i class="bi bi-bag-check-fill me-2 text-success"></i> Satın Aldıklarım
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="/Profile?tab=market">
                                            <i class="bi bi-shop me-2 text-info"></i> @Localizer["MyProducts"]
                                        </a>
                                    </li>
                                     <li>
                                        <a class="dropdown-item d-flex align-items-center" href="/Profile?tab=housing">
                                            <i class="bi bi-house-door-fill me-2 text-danger"></i> @Localizer["MyAds"]
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="/Profile?tab=comments">
                                            <i class="bi bi-chat-dots-fill me-2 text-secondary"></i> @Localizer["MyComments"]
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="/Profile?tab=settings">
                                            <i class="bi bi-gear-fill me-2 text-dark"></i> @Localizer["Settings"]
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item text-danger d-flex align-items-center">
                                                <i class="bi bi-box-arrow-right me-2"></i> @Localizer["Logout"]
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item me-2">
                                <a class="nav-link fw-bold" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary fw-bold px-4" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="margin-top: 100px; min-height: 80vh;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 py-4 bg-white">
        <div class="container text-center">
            &copy; 2026 - Kampüs Platformu - <a class="text-decoration-none" href="#">Gizlilik</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
