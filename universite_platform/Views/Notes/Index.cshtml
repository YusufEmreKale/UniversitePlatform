@model IEnumerable<universite_platform.Models.LectureNote>

@{
    ViewData["Title"] = "Ders NotlarÄ±";
}

<div class="container">
<div class="hero-section d-flex justify-content-between align-items-center mb-5">
    <div>
        <h1 class="display-5 hero-title">ðŸ“š Ders NotlarÄ±</h1>
        <p class="hero-subtitle mb-0">AradÄ±ÄŸÄ±nÄ±z dersin notlarÄ±na anÄ±nda ulaÅŸÄ±n.</p>
    </div>
    @if (!User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary btn-lg shadow-lg position-relative" style="z-index: 2;">
            <i class="bi bi-plus-lg"></i> Not YÃ¼kle
        </a>
    }
</div>

    <!-- Live Search Section -->
    <div class="glass-card mb-5 p-4">
        <div class="position-relative">
            <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted fs-5"></i>
            <input type="text" id="liveSearch" class="form-control form-control-lg ps-5 border-0 bg-white" placeholder="Ders adÄ± veya konu ara..." style="box-shadow: none;" onkeyup="filterNotes()" />
        </div>
    </div>

    <div class="row" id="notesGrid">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4 note-item" data-title="@item.Title.ToLower()" data-course="@item.CourseName.ToLower()">
                <div class="card h-100 border-0 shadow-sm hover-card" style="border-radius: 15px; overflow: hidden;">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="badge bg-light text-primary border border-primary">@item.CourseName</span>
                            <small class="text-muted">@item.UploadedAt.ToString("dd.MM.yyyy")</small>
                        </div>
                        <h5 class="card-title fw-bold mb-3">@item.Title</h5>
                        <p class="card-text text-muted mb-4"><i class="bi bi-journal-bookmark me-2"></i>@item.ExamType</p>
                        
                         <div class="d-flex justify-content-between align-items-center">
                            @if(item.IsPaid)
                            { 
                                <span class="fw-bold text-success fs-5">@item.Price?.ToString("C2")</span> 
                            }
                            else
                            { 
                                <span class="fw-bold text-primary fs-5">Ãœcretsiz</span> 
                            }
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary rounded-pill px-4">Ä°ncele</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script>
    function filterNotes() {
        var input = document.getElementById("liveSearch");
        var filter = input.value.toLowerCase();
        var nodes = document.getElementsByClassName('note-item');

        for (i = 0; i < nodes.length; i++) {
            var title = nodes[i].getAttribute('data-title');
            var course = nodes[i].getAttribute('data-course');
            
            if (title.includes(filter) || course.includes(filter)) {
                nodes[i].style.display = "block";
            } else {
                nodes[i].style.display = "none";
            }
        }
    }
</script>
