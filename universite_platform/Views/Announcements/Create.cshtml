@model universite_platform.Models.Announcement

@{
    ViewData["Title"] = "Duyuru Oluştur";
}

<div class="container d-flex justify-content-center">
    <div class="col-md-8">
        <div class="glass-card border-warning border-2">
            <h2 class="mb-4 text-warning fw-bold"><i class="bi bi-megaphone-fill"></i> Duyuru Yayınla</h2>
            <p class="text-muted mb-4">Bu duyuru tüm kullanıcılar tarafından görülebilecektir.</p>
            
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label fw-bold mb-1"></label>
                    <input asp-for="Title" class="form-control" placeholder="Duyuru başlığı..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Content" class="control-label fw-bold mb-1"></label>
                    <textarea asp-for="Content" class="form-control" rows="6" placeholder="Duyuru içeriği..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-warning fw-bold btn-lg">Yayınla</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
