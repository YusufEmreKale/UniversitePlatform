@model IEnumerable<universite_platform.Models.ForumTopic>

@{
    ViewData["Title"] = "Forum";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1 class="display-4" style="color: var(--primary-color);">ðŸ’¬ Ã–ÄŸrenci Forumu</h1>
        <p class="lead text-muted">KampÃ¼s gÃ¼ndemini konuÅŸun, sorular sorun.</p>
    </div>
    <div class="col-md-4 text-end align-self-center">
        @if (User.IsInRole("Student"))
        {
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-chat-dots"></i> Yeni Konu AÃ§
            </a>
        }
    </div>
</div>

<div class="glass-card mb-4 p-0" style="background: rgba(255, 255, 255, 0.7);">
    <div class="accordion accordion-flush" id="forumAccordion">
        @foreach (var item in Model)
        {
            <div class="accordion-item bg-transparent border-bottom">
                <h2 class="accordion-header" id="heading-@item.Id">
                    <button class="accordion-button collapsed bg-transparent shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@item.Id" aria-expanded="false" aria-controls="collapse-@item.Id">
                        <div class="d-flex flex-column w-100 me-3">
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <span class="fw-semibold text-dark fs-5">@item.Title</span>
                                <small class="text-muted fw-normal">@item.CreatedAt.ToString("g")</small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted"><i class="bi bi-person me-1"></i> @item.Author?.FullName</small>
                                <span class="badge bg-light text-secondary border rounded-pill">
                                    <i class="bi bi-chat-text-fill me-1"></i> @item.Comments.Count
                                </span>
                            </div>
                        </div>
                    </button>
                </h2>
                <div id="collapse-@item.Id" class="accordion-collapse collapse" aria-labelledby="heading-@item.Id" data-bs-parent="#forumAccordion">
                    <div class="accordion-body px-4 py-4 bg-white bg-opacity-25">
                        <!-- Topic Content -->
                        <div class="mb-4">
                            <p class="lead fs-6" style="white-space: pre-wrap;">@item.Content</p>
                        </div>

                        <!-- Replies -->
                        <div class="ms-3 border-start border-3 ps-3 mb-4">
                            <h6 class="fw-bold mb-3 text-secondary">Cevaplar</h6>
                            @if(item.Comments.Any())
                            {
                                @foreach (var comment in item.Comments.OrderBy(c => c.CreatedAt))
                                {
                                    <div class="mb-3 bg-light p-3 rounded shadow-sm">
                                        <div class="d-flex justify-content-between">
                                            <span class="fw-bold small">@comment.Author?.FullName</span>
                                            <small class="text-muted" style="font-size: 0.75rem;">@comment.CreatedAt.ToString("g")</small>
                                        </div>
                                        <p class="mb-0 mt-1 small">@comment.Content</p>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted small fst-italic">HenÃ¼z cevap yok. Ä°lk cevabÄ± sen yaz!</p>
                            }
                        </div>

                        <!-- Reply Form -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-action="AddComment" method="post" class="mt-3">
                                <input type="hidden" name="topicId" value="@item.Id" />
                                <div class="input-group">
                                    <input type="text" name="content" class="form-control" placeholder="Bir cevap yaz..." required />
                                    <button class="btn btn-primary" type="submit">GÃ¶nder</button>
                                </div>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
