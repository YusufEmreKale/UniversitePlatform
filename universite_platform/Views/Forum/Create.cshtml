@model universite_platform.Models.ViewModels.ForumTopicCreateViewModel

@{
    ViewData["Title"] = "Yeni Konu";
}

<div class="container d-flex justify-content-center">
    <div class="col-md-8">
        <div class="glass-card">
            <h2 class="mb-4" style="color: var(--primary-color); font-weight: bold;">Yeni Konu Oluştur</h2>
            
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label fw-bold mb-1"></label>
                    <input asp-for="Title" class="form-control" placeholder="Konu başlığı..." />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Content" class="control-label fw-bold mb-1"></label>
                    <textarea asp-for="Content" class="form-control" rows="6" placeholder="Ne hakkında konuşmak istersin?"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Konuyu Yayınla</button>
                    <a asp-action="Index" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
