@model universite_platform.Models.ForumTopic

@{
    ViewData["Title"] = Model.Title;
}

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="glass-card mb-4">
                <div class="d-flex justify-content-between mb-2">
                    <span class="badge bg-primary">Forum</span>
                    <small class="text-muted">@Model.CreatedAt.ToString("g")</small>
                </div>
                <h2 class="fw-bold mb-3">@Model.Title</h2>
                <div class="d-flex align-items-center mb-4">
                    <i class="bi bi-person-circle fs-4 me-2 text-secondary"></i>
                    <span class="fw-bold">@Model.Author?.FullName</span>
                </div>
                <p class="lead" style="white-space: pre-wrap;">@Model.Content</p>
                
                 @if (User.IsInRole("Admin"))
                {
                     <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-3" onsubmit="return confirm('Konuyu silmek istediğinize emin misiniz?');">
                        <button type="submit" class="btn btn-danger btn-sm">Konuyu Sil (Admin)</button>
                    </form>
                }
            </div>

            <!-- Comments -->
            <div class="glass-card">
                <h4 class="mb-4">Yorumlar (@Model.Comments.Count)</h4>

                @foreach (var comment in Model.Comments.OrderBy(c => c.CreatedAt))
                {
                    <div class="d-flex mb-3 border-bottom pb-3">
                        <div class="flex-shrink-0">
                            <i class="bi bi-person-circle fs-3 text-secondary"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="fw-bold mb-0">@comment.Author?.FullName</h6>
                                <small class="text-muted">@comment.CreatedAt.ToString("g")</small>
                            </div>
                            <p class="mb-1">@comment.Content</p>
                            
                             @if (User.IsInRole("Admin"))
                            {
                                <form asp-action="DeleteComment" asp-route-id="@comment.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-outline-danger btn-sm py-0 px-2" style="font-size: 0.8rem;">Sil</button>
                                </form>
                            }
                        </div>
                    </div>
                }

                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-action="AddComment" method="post" class="mt-4">
                        <input type="hidden" name="topicId" value="@Model.Id" />
                        <div class="form-group mb-3">
                            <label class="form-label fw-bold">Yorum Yap</label>
                            <textarea name="content" class="form-control" rows="3" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Gönder</button>
                    </form>
                }
                else
                {
                    <div class="alert alert-info">Yorum yapmak için giriş yapmalısınız.</div>
                }
            </div>
             <a asp-action="Index" class="btn btn-link mt-3 text-muted">Foruma Dön</a>
        </div>
    </div>
</div>
