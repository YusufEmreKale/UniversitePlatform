@model universite_platform.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6">
        <div class="glass-card text-center">
            <h2 class="mb-4" style="color: var(--primary-color); font-weight: bold;">Aramıza Katılın</h2>
            <p class="text-muted mb-4">Üniversite platformuna üye olun</p>
            
            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="form-group mb-3 text-start">
                    <label asp-for="FullName" class="control-label mb-1 fw-bold"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Ad Soyad" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3 text-start">
                    <label asp-for="StudentNumber" class="control-label mb-1 fw-bold"></label>
                    <input asp-for="StudentNumber" class="form-control" placeholder="Öğrenci Numarası (Opsiyonel)" />
                    <span asp-validation-for="StudentNumber" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3 text-start">
                    <label asp-for="Email" class="control-label mb-1 fw-bold"></label>
                    <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-md-6 form-group mb-4 text-start">
                        <label asp-for="Password" class="control-label mb-1 fw-bold">Şifre</label>
                        <input asp-for="Password" class="form-control" placeholder="••••••••" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 form-group mb-4 text-start">
                        <label asp-for="ConfirmPassword" class="control-label mb-1 fw-bold">Şifre Tekrar</label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="••••••••" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Kayıt Ol</button>
                </div>
            </form>
            
            <div class="mt-4">
                <p>Zaten üye misiniz? <a asp-action="Login" style="color: var(--secondary-color); text-decoration: none; font-weight: bold;">Giriş Yapın</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
