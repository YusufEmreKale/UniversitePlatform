@model universite_platform.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-5">
        <div class="glass-card text-center">
            <h2 class="mb-4" style="color: var(--primary-color); font-weight: bold;">Hoş Geldiniz</h2>
            <p class="text-muted mb-4">Hesabınıza giriş yapın</p>
            
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <div class="form-group mb-3 text-start">
                    <label asp-for="Email" class="control-label mb-1 fw-bold"></label>
                    <input asp-for="Email" class="form-control" placeholder="ornek@ogrenci.edu.tr" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3 text-start">
                    <label asp-for="Password" class="control-label mb-1 fw-bold">Şifre</label>
                    <input asp-for="Password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="form-group form-check text-start mb-4">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
                
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
                </div>
            </form>
            
            <div class="mt-4">
                <p>Hesabınız yok mu? <a asp-action="Register" style="color: var(--secondary-color); text-decoration: none; font-weight: bold;">Hemen Kayıt Olun</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
